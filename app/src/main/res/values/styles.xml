<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.LinkList">
        <item name="android:background">#DDDDDD</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CardTitleText" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardContent" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CardUrl" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="AppTheme.tag">
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:background">#f1e3e3</item>
    </style>
</resources>
